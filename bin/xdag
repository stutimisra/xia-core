getxid() {
	# $1 contains the XID type to search for
	XID=`$xdir/xroute --hostname=$1 -v --type=$2 | grep self | tr -s " " "\t"  | cut -f2`
}

xdir=`dirname $0`

if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	cat << EOH
xdag

print the system's hostname & DAG suitable for including in etc/hosts.xia

options:
  -h, --help    display this help
  -v, --version display the version number
EOH
	exit 0
elif [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	echo "xdag 1.0"
	exit 0
fi

# print DAG mappings suitable for inclusion in hosts.xia
getxid $1 "AD"
AD=$XID
getxid $1 "HID"
HID=$XID
[ "$HID" != "" -a "$AD" != "" ] && echo "$(hostname -s) RE $AD $HID"
